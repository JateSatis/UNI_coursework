<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.uni_coursework.screens.welcome.WelcomeFragment"
    android:padding="20dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/welcomeLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:src="@mipmap/harmony_logo"/>

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Зайдите в аккаунт чтобы\nдостигнуть гармонии"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/launchSignIn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTitle"
        android:text="Войти в аккаунт"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/launchSignUp"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launchSignIn"
        android:layout_marginTop="20dp"
        android:text="Зарегистрироваться"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_sign_in"
        app:layout_constraintBottom_toBottomOf="@+id/launchSignIn"
        app:layout_constraintStart_toStartOf="@+id/launchSignIn"
        app:layout_constraintTop_toTopOf="@+id/launchSignIn" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_sign_up"
        app:layout_constraintBottom_toBottomOf="@+id/launchSignUp"
        app:layout_constraintStart_toStartOf="@+id/launchSignUp"
        app:layout_constraintTop_toTopOf="@+id/launchSignUp" />


</androidx.constraintlayout.widget.ConstraintLayout>